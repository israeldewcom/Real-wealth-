const seedPlans = async () => {
  try {
    console.log('ðŸŒ± Seeding advanced investment plans...');
    
    await InvestmentPlan.deleteMany({});
    await InvestmentPlan.insertMany(advancedPlans);
    
    console.log('âœ… 15 Premium investment plans seeded successfully!');
    console.log('ðŸ“Š Plan Distribution:');
    console.log('   ðŸŸ¢ Entry Level: 2 plans (â‚¦3,500 - â‚¦25,000)');
    console.log('   ðŸŸ¡ Growth: 4 plans (â‚¦23,500 - â‚¦150,000)');
    console.log('   ðŸ”µ Premium: 4 plans (â‚¦63,500 - â‚¦400,000)');
    console.log('   ðŸŸ£ Ultra Premium: 4 plans (â‚¦113,500 - â‚¦1,500,000)');
    console.log('   ðŸ”´ Exclusive: 1 plan (â‚¦153,500 - â‚¦5,000,000)');
    
  } catch (error) {
    console.error('âŒ Seeding error:', error);
    throw error;
  }
};

// Run if called directly
if (require.main === module) {
  require('dotenv').config();
  const MONGODB_URI = process.env.MONGODB_URI || 'mongodb://localhost:27017/raw-wealthy';
  
  mongoose.connect(MONGODB_URI)
    .then(() => {
      console.log('ðŸ“¡ Connected to MongoDB for advanced seeding');
      return seedPlans();
    })
    .then(() => {
      console.log('ðŸŽ‰ Advanced seeding completed successfully!');
      process.exit(0);
    })
    .catch(error => {
      console.error('ðŸ’¥ Advanced seeding failed:', error);
      process.exit(1);
    });
}

module.exports = { seedPlans, advancedPlans };
