# =======================================
# RAW WEALTHY PRODUCTION CONFIGURATION
# Copy to .env and fill in your values
# =======================================

# Server Configuration
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.com

# Database (MongoDB Atlas Recommended)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/raw-wealthy-prod
MONGO_USERNAME=your-mongo-username
MONGO_PASSWORD=your-mongo-password

# JWT Security
JWT_SECRET=your-super-secure-jwt-secret-key-minimum-64-characters-long-make-it-very-strong-and-random
JWT_EXPIRES_IN=30d

# Email (SendGrid Recommended)
EMAIL_SERVICE=sendgrid
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASS=your-sendgrid-api-key
EMAIL_FROM=support@rawwealthy.com

# Cloudinary for File Storage
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Redis for Caching and Sessions
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# Payment Configuration
WITHDRAWAL_FEE_PERCENTAGE=5
MIN_DEPOSIT_AMOUNT=3500
MIN_WITHDRAWAL_AMOUNT=3500
REFERRAL_BONUS_PERCENTAGE=20

# Admin Configuration
ADMIN_EMAIL=admin@rawwealthy.com
SUPPORT_EMAIL=support@rawwealthy.com

# Security
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Features
ENABLE_2FA=true
ENABLE_EMAIL_VERIFICATION=true
ENABLE_KYC_VERIFICATION=true
ENABLE_REFERRAL_SYSTEM=true

# External APIs
SENDGRID_API_KEY=your-sendgrid-api-key

# Monitoring (Optional)
SENTRY_DSN=your-sentry-dsn
NEW_RELIC_LICENSE_KEY=your-newrelic-key
